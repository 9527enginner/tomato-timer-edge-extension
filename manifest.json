{
  "manifest_version": 3,
  "name": "Tomato Timer",
  "version": "1.0.0",
   "permissions": [
    "storage"
  ],
  "description": "A simple pomodoro timer extension for Edge.",
  "icons": {
    "16": "tomato.png",
    "32": "tomato.png",
    "48": "tomato.png",
    "128": "tomato.png"
  },
  "background": {
    "service_worker": "background.js",
     "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ]
}
