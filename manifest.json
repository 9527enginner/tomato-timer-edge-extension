{
  "manifest_version": 2,
  "name": "Tomato Timer",
  "version": "1.0.0",
  "description": "A simple pomodoro timer extension for Edge.",
  "icons": {
    "16": "tomato.png",
    "32": "tomato.png",
    "48": "tomato.png",
    "128": "tomato.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ]
}
